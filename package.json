{
  "name": "arthub",
  "description": "ArtHub - 游戏美术工作台",
  "author": "ArtHub Team",
  "private": true,
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "powershell -Command \"if (Test-Path dist) { Remove-Item -Recurse -Force dist }; if (Test-Path node_modules\\.vite) { Remove-Item -Recurse -Force node_modules\\.vite }; Write-Host '清理完成！' -ForegroundColor Green\"",
    "clean:build": "npm run clean && npm run build",
    "sync-version": "node scripts/sync-version.js",
    "setup-auto-push": "powershell -ExecutionPolicy Bypass -File scripts/setup-auto-push.ps1",
    "tauri": "tauri",
    "tauri:dev": "npm run sync-version && tauri dev",
    "tauri:build": "npm run sync-version && tauri build",
    "tauri:build:clean": "npm run clean && npm run sync-version && npm run build && tauri build"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@tauri-apps/api": "^1.6.0",
    "@tauri-apps/cli": "^1.6.3",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.18",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  }
}
